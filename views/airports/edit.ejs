<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= airport.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/airports/<%= airport._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="airport[name]" value="<%= airport.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="airport[image]" value="<%= airport.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="airport[description]" value="<%= airport.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control traffic" type="text" name="airport[traffic]" placeholder="traffic (passengers per year)" step="10000" value="<%= airport.traffic %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/airports">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>