<% include ./partials/header %>

<h1 style="text-align: center;">Sign Up</h1>
<div style="width: 30%; margin: 30px auto;">
    <form action="/register" method="POST">
        <div class="form-group">
            <input 
                class="form-control" 
                type="text" 
                name="user[username]" 
                placeholder="username" 
                value="<%= typeof username !== 'undefined' && username ? username : '' %>" 
                autofocus
            >
        </div>
        <div class="form-group">
            <input 
                class="form-control" 
                type="text" 
                name="user[firstName]" 
                placeholder="first name" 
                value="<%= typeof firstName !== 'undefined' && firstName ? firstName : '' %>" 
            >
        </div>
        <div class="form-group">
            <input 
                class="form-control" 
                type="text" 
                name="user[lastName]" 
                placeholder="last name" 
                value="<%= typeof lastName !== 'undefined' && lastName ? lastName : '' %>" 
            >
        </div>
        <div class="form-group">
            <input 
                class="form-control" 
                type="email" 
                name="user[email]" 
                placeholder="email" 
                value="<%= typeof email !== 'undefined' && email ? email : '' %>" 
            >
        </div>
        <div class="form-group">
            <input 
                class="form-control" 
                type="password" 
                name="password" 
                placeholder="password"
            >
        </div>
        <div class="form-group">
            <input 
                class="form-control" 
                type="password" 
                name="passwordVerify" 
                placeholder="retype password"
            >
        </div>
        <div class="form-group">
            <input 
                class="form-control" 
                type="text" 
                name="adminCode" 
                placeholder="admin code" 
                value="<%= typeof adminCode !== 'undefined' && adminCode ? adminCode : '' %>"
            >
        </div>
        <div class="form-group">
            <button 
                class="btn btn-lg btn-primary btn-block"
            >Sign Up</button>
        </div>
    </form>
    <a href="/airports">Go Back</a>
</div>

<% include ./partials/footer %>