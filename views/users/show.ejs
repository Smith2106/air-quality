<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1><%= user.firstName %> <%= user.lastName %></h1>
            <div class="thumbnail">
                <img src="<%= user.avatar %>" alt="User profile image">
                <div class="caption">
                    <a href="mailto:<%= user.email %>"><%= user.email %></a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <h3><%= user.username %>'s Airports</h3>
            <ul>
                <% airports.forEach(airport => { %>
                    <li><a href="/airports/<%= airport._id %>"><%= airport.name %></a></li>
                <% }) %>
            </ul>
        </div>
    </div>
</div>
<% include ../partials/footer %>